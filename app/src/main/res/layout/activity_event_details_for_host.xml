<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center">

    <TextView
        android:id="@+id/HostViewEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EVENT NAME PLACEHOLDER"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="70dp"/>

        <TextView
            android:id="@+id/HostViewEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACEHOLDER"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccine Card Allowed?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginRight="80dp"/>

        <TextView
            android:id="@+id/HostViewEventVax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES/NO"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID Test Allowed?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginRight="95dp"/>

        <TextView
            android:id="@+id/HostViewEventTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES/NO"
            android:textSize="18sp"
            android:textColor="@color/black"
/>
    </LinearLayout>


    <TextView
        android:id="@+id/HostViewEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENT LOCATION PLACEHOLDER"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/HostViewEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:layout_marginTop="60dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut non dapibus enim, ac condimentum lacus. Suspendisse at dapibus elit. Donec dictum sapien non tortor scelerisque tincidunt. Morbi aliquet et lacus in ornare. Vivamus sollicitudin eget urna eget fringilla. Sed sollicitudin fringilla lobortis. Donec nec nisl vel odio euismod ullamcorper. Etiam ornare purus ac quam auctor, in luctus velit feugiat. In vulputate dolor eget augue convallis consequat. Donec sed arcu neque."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/HostViewHomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Return\nHome"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/HostViewGuestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View\nGuests"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>


</LinearLayout>